<body>
    <!-- slider area start here -->
    <div class="section breadcumb-area background-image" data-src="background-image: url(~/css/Img/contact-us.jpg);" style="background-image: url('../css/Img/contact-us.jpg')">
        <div class="container ">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <ul>
                        <li>Contact Us</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="section price-area padding-top-bottom-70">
        <div class="container">
            <div class="row utility-bill">
                <h3 style="text-align:center;" ><span>We are here to help</span> </h3>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="price-table">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="contact_info text-center">
                                        <p><i class="fa fa-phone" aria-hidden="true"></i></p>
                                        <p><a class="linkcontact" href="tel:918191929394">(+91) 81-91-92-93-94</a>
                                        <p>(10:00 AM to 06:30 PM, All days)</p>
                                    </div>

                                    <br />
                                    <div class="contact_info text-center">
                                        <p><i class="fa fa-envelope-o" aria-hidden="true"></i></p>
                                        <p><a class="linkcontact" href="info@redmil.in">info@redmil.in</a></p>

                                    </div>
                                </div>
                                <br />
                                <div class="col-sm-6">
                                        <div class="contact_info text_center">
                                            <p class="p-write-to-us"><strong>For Any Query Please Click Here</strong></p>
                                            <br />
                                            <div class="center" style="margin-left:37px;">
                                                <button type="button" class="button-21" margin-right:20px" data-toggle="modal" data-target="#myModal1">Write to us</button>
                                            </div>


                                            <!-- Modal -->
                                            <div class="modal fade" id="myModal1" role="dialog">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header modal-header-recharge">
                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                            <h4 class="modal-title"><strong>Fill the form to Connect with us</strong></h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form>
                                                                <div class="row">
                                                                    <div class="col-sm-12">
                                                                        <label>Name:</label>
                                                                        <input type="text" class="form-control" name="name" id="name" placeholder="Full Name">
                                                                    </div>
                                                                    <div class="col-sm-12">
                                                                        <label>Email:</label>
                                                                        <input type="email" class="form-control" name="email" id="email" placeholder="Your Email">
                                                                    </div>

                                                                    <div class="col-sm-12">
                                                                        <label>Mobile Number:</label>
                                                                        <input type="text" class="form-control" name="number" id="number" placeholder="Mobile Number">
                                                                    </div>
                                                                    <div class="col-sm-12">
                                                                        <label>Message:</label>
                                                                        <textarea class="form-control" name="message" id="message" rows="3" placeholder="Type Your Message"></textarea>
                                                                    </div>
                                                                     <div class="col-sm-12 padding-top-20">
                                                                    <button type="submit" name="submit-contact" class="button-21"><strong>Submit</strong></button>
                                                                </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="section contact-form-area  padding-bottom-50" style="background:#fafafa;">
        <div class="container">
            <div class="row">

                <div class="col-sm-6 padding-top-50 contact-us-page">

                    <h2 style="color: #051cb2!important;">Redmil Business Mall Headquarters <strong>Corporate Office</strong></h2>
                    <ul>
                        <li >
