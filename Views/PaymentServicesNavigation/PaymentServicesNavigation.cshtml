<div class="section services-area padding-top-bottom-60 row_heading_start">
    <div class="container">
        <section class="customer-logos Bill-Payement-Top" data-arrows="true">
            <div class="row" id="row2">
                <div class="col-md-12">
                    <div class="col-md-3 col-sm-3 col-3 col-xs-3 col-custom text-center col-centered row_cashWithdrawal">
                        <a data-target="#modalServiceComing" data-toggle="modal" class="radio1" style="text-align: center;margin-left: 100px;">
                            <div class="wallet-box bg-wt-round wallet_box_border">
                                <div class="inner">
                                    <div class="advantage-images">
                                        <img src="/css/Img_IconForNavigation/Accept-Card-Payments-(POS).png" class="img-responsive" alt="Accept Card payments(POS)" title="Accept Card payments(POS)">
                                    </div>
                                    <b class="about_services_para">Card Payments</b>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-3 col-sm-3 col-3 col-xs-3 col-custom text-center col-centered row_cashWithdrawal">
                        <a data-target="#modalServiceComing" data-toggle="modal" class="radio1" style="text-align: center;margin-left: 100px;">
                            <div class="wallet-box bg-wt-round wallet_box_border">
                                <div class="inner">
                                    <div class="advantage-images">
                                        <img src="/css/Img_IconForNavigation/SMS-Payments.png" class="img-responsive" alt="SMS Payments" title="SMS Payments">
                                    </div>
                                    <b class="about_services_para">SMS Payments</b>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-md-3 col-sm-3 col-3 col-xs-3 col-custom text-center col-centered row_cashWithdrawal">
                        <a data-target="#modalServiceComing" data-toggle="modal" class="radio1" style="text-align: center;margin-left: 100px;">
                            <div class="wallet-box bg-wt-round wallet_box_border">
                                <div class="inner">
                                    <div class="advantage-images">
                                        <img src="/css/Img_IconForNavigation/Hisab-Kitab.png" class="img-responsive" alt="Hisab Kitab" title="Hisab Kitab">
                                    </div>
                                    <b class="about_services_para">Hisab Kitab</b>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-3 col-3 col-xs-3 col-custom text-center col-centered row_cashWithdrawal">
                        <a data-target="#modalServiceComing" data-toggle="modal" class="radio1" style="text-align: center;margin-left: 100px;">
                            <div class="wallet-box bg-wt-round wallet_box_border">
                                <div class="inner">
                                    <div class="advantage-images">
                                        <img src="/css/Img_IconForNavigation/Aadhar-Pay.png" class="img-responsive" alt="Aadhar Pay" title="Aadhar Pay">
                                    </div>
                                    <b class="about_services_para">Aadhar Pay</b>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<!-- Modal For ServicesComing-->
<div class="modal fade" id="modalServiceComing" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header modal-header-recharge">
                <a data-dismiss="modal" style="padding-top:12px;" class="close">&times;</a>
            </div>
            <div class="modal-body" style="background-color:white;">
                <div class="row">
                    <div class="col-sm-12" style="text-align:center">
                        <h3 style="text-align:center;font-weight:700;">This service is coming soon!</h3>
                    </div>
                </div>
            </div>
            <div class="modal-footer div-pay-row">
                <div class="row div-pay-row">
                    <div class="col-sm-4 final-pay-button">
                        <button type="button" id="btnPayNow" data-dismiss="modal" class="btn-process-recharge1 btn-process-recharge2 btn-process-recharge3">Ok</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>