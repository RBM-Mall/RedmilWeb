                    }

                    
                    }
                    else 
                    {
                    
                    }
                }

            })
        


    })
    function youtube(e)
    {
            
    var data=e;
        window.open(data);
    }
    function Bangkok(e) {
        debugger
        var ContestId = e;
        $.ajax({
            url: "/Wallet/TourPackage",
            data: { 'ContestId': ContestId },
            type: 'POST',
            dataType: 'json',
            success: function (data) 
            {
                    
                if (data.statuscode == "ERR") 
                {
                    $("#Error_modal_Detail").trigger("click");
                    $("#lblMsg_detail").text(data.message);
                }
                else if (data.statuscode == "TXN") 
                {
                    $("#SUCCESS_modalTravel").trigger("click");
                    $("#SUCCESS_HedingTravel").text("Your contest has been successfully availed.Team Will contact you soon");


                }
            }

        });
    }
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
            }
        });
    }
</script>
